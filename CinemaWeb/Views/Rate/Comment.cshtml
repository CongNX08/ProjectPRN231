@model IEnumerable<DataAccess.DTO.RateDTO>

<div class="container w-full h-full border border-gray-200 rounded-lg bg-gray-200 dark:bg-gray-700 dark:border-gray-600 my-20">

    <div class=" mx-auto flex mt-4">
        <div class="w-8/12 ">
            <div class=" font-bold text-3xl  block p-2.5  border-b-2 border-gray-500 bg-transparent focus:ring-0 ">@ViewBag.Movie.Title</div>
            <div>
                <video class="w-full" controls>
                    <source src="/docs/videos/flowbite.mp4" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>



        <div class="w-4/12 ml-12">
            <div class=" ">

                <img class="w-full h-64 object-fill rounded-2xl" src=" @ViewBag.Movie.Image " alt="FirstSlide">
            </div>
            <div class=" ">
                <div class=" border-b-2 border-gray-500 pb-2">
                    <div class="text-yellow-500 font-bold text-2xl  block p-2.5  border-b-2 border-gray-500 bg-transparent focus:ring-0 ">@ViewBag.Movie.Title</div>
                    <div class="border-t-4 ">
                        <div class="flex ">
                            <div class="text-yellow-500 font-bold mr-1 text-xl">
                                Descripton:
                            </div>
                            <div class="mt-1">@ViewBag.Movie.Description</div>
                        </div>

                        <div class="flex ">
                            <div class="text-yellow-500 font-bold mr-1 text-xl">
                                Genre:
                            </div>
                            <div class="mt-1">@ViewBag.Movie.Genre</div>
                        </div>
                    </div>
                    <div class="flex items-center content-center mt-2">
                        <div class="flex">
                            <div class="text-yellow-500 font-bold mr-1 text-xl">
                                Rate:
                            </div>
                            <div class=" mr-2 text-xl">@ViewBag.Movie.RatingPoint</div>
                        </div>
                        <i class="fa-solid fa-star text-3xl" style="color: #fbf304;"></i>
                    </div>
                </div>



            </div>

            <div class="text-2xl text-orange-300 font-bold ">
                Comment
            </div>
            <form method="post">
                @foreach (var item in Model)
                {
                    <div class="grid grid-cols-8 gap-4  mt-3 p-1 ">
                        <div class="col-span-1 mt-1">
                            <img class="w-10 h-10 rounded-full" src=" @ViewBag.Movie.Image " alt="FirstSlide">
                        </div>
                        <div class="col-span-7">
                            <div>@item.PersonName</div>
                            <div>@item.Comment</div>
                            <div>@item.Time</div>

                        </div>
                    </div>
                }
                @{
                    string username = Context.Session.GetString("FullName");
                    string UserId = Context.Session.GetString("UserId");
                    if (!String.IsNullOrEmpty(username))
                    {
                        <div class="w-full mb-4 border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600 mt-3">
                            <div class="px-4 py-2 bg-white rounded-t-lg dark:bg-gray-800">
                                <label for="comment" class="sr-only">Your comment</label>
                                <textarea id="comment" name="comment" rows="2" class="w-full px-0 text-sm text-gray-900 bg-white border-0 dark:bg-gray-800 focus:ring-0 dark:text-white dark:placeholder-gray-400" placeholder="Write your comment..." required></textarea>
                            </div>
                            <div class="flex items-center justify-between px-3 py-2 border-t dark:border-gray-600">
                                <button type="submit" asp-route-movieID="@ViewBag.Movie.MovieId" asp-route-personID="@UserId" class="inline-flex items-center py-2.5 px-4 text-xs font-medium text-center text-white bg-blue-700 rounded-lg focus:ring-4 focus:ring-blue-200 dark:focus:ring-blue-900 hover:bg-blue-800">
                                    Post comment
                                </button>
                                <div class="flex pl-0 space-x-1 sm:pl-2">
                                    <button type="button" class="inline-flex justify-center items-center p-2 text-gray-500 rounded cursor-pointer hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-600">
                                        <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 12 20">
                                            <path stroke="currentColor" stroke-linejoin="round" stroke-width="2" d="M1 6v8a5 5 0 1 0 10 0V4.5a3.5 3.5 0 1 0-7 0V13a2 2 0 0 0 4 0V6" />
                                        </svg>
                                        <span class="sr-only">Attach file</span>
                                    </button>
                                    <button type="submit" class="inline-flex justify-center items-center p-2 text-gray-500 rounded cursor-pointer hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-600">
                                        <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 20">
                                            <path d="M8 0a7.992 7.992 0 0 0-6.583 12.535 1 1 0 0 0 .12.183l.12.146c.112.145.227.285.326.4l5.245 6.374a1 1 0 0 0 1.545-.003l5.092-6.205c.206-.222.4-.455.578-.7l.127-.155a.934.934 0 0 0 .122-.192A8.001 8.001 0 0 0 8 0Zm0 11a3 3 0 1 1 0-6 3 3 0 0 1 0 6Z" />
                                        </svg>
                                        <span class="sr-only">Set location</span>
                                    </button>
                                    <button type="button" class="inline-flex justify-center items-center p-2 text-gray-500 rounded cursor-pointer hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-600">
                                        <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 18">
                                            <path d="M18 0H2a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2Zm-5.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm4.376 10.481A1 1 0 0 1 16 15H4a1 1 0 0 1-.895-1.447l3.5-7A1 1 0 0 1 7.468 6a.965.965 0 0 1 .9.5l2.775 4.757 1.546-1.887a1 1 0 0 1 1.618.1l2.541 4a1 1 0 0 1 .028 1.011Z" />
                                        </svg>
                                        <span class="sr-only">Upload image</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                }
            </form>



        </div>
    </div>
</div>
